<div class="card col-md-6 container">
        <div class="card-header text-center">
          Update sản phẩm
        </div>
        <div class="card-body">
          <form method="POST" action="/pro/product_update">
          <input type="hidden" name="id" value="{{sp._id}}">
          <div class="row mb-3">
            <a class="btn btn-dark col-auto me-auto" href="/pro/products"><i class="fa-solid fa-arrow-left"></i>
                Back</a>
            <code class="mx-auto col-auto">{{notify}}</code>
        </div>

            <div class="form-group">
              <label class="form-label">Tên sản phẩm</label>
              <input type="text" class="form-control" name="name" value="{{sp.name}}" >
            </div>
            <div class="form-group">
              <label class="form-label">Loại sản phẩm</label>
              <select class="form-control" name="type" value="{{sp.type}}">
                <option>A</option>
                <option>B</option>
              </select>
            </div>
            <div class="form-group">
              <label class="form-label">Giá tiền</label>
              <input type="number" class="form-control" name="price" value="{{sp.price}}" >
            </div>
            <div class="form-group">
              <label class="form-label">Mô tả</label>
              <input type="text" class="form-control" name="color" value="{{sp.color}}" >
            </div>
            <hr>
            <button type="submit" class="btn btn-primary">Update sản phẩm</button>
          </form>
        </div>
      </div>


      